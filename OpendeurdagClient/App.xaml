    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpendeurdagClient"
    RequestedTheme="Light"
    xmlns:view="using:OpendeurdagClient.View">

    <Application.Resources>
        
        <DataTemplate x:Key="MainPageViewModel">
            <view:MainPageView />
        </DataTemplate>
       
        <DataTemplate x:Key="CampusViewModel">
            <view:CampusView />
        </DataTemplate>
        <DataTemplate x:Key="DegreeViewModel">
            <view:DegreeView />
        </DataTemplate>

    </Application.Resources>
    
</Application>







